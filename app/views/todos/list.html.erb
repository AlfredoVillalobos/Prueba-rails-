<div class= 'container'>
  <div class= 'row'>
    <div class= 'col-md-6'>
    <h3 class = 'well'> No completados </h3>
      <ul class = 'list-group'>
        <% @todos.each do |t| %>
          <% unless t.completed %>
            <li class="list-group-item"><%= "#{t.description} #{t.completed}"%></li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class= 'col-md-6'>
      <h3 class = 'well'> completados </h3>
        <ul class = 'list-group'>
          <% @todos.each do |t| %>
          <% if t.completed %>
            <li class="list-group-item"><%= "#{t.description} #{t.completed}"%></li>
            <% end %>
          <% end %>
        </ul>
    </div>
  </div>
</div>


